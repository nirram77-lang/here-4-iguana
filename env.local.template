# ========================================
# I4IGUANA - Environment Configuration
# ========================================

# ✅ Demo Mode Configuration
# Set to 'true' for testing without real payments
# Set to 'false' for production with real Stripe
NEXT_PUBLIC_DEMO_PAYMENTS=true

# ✅ App Domain (for QR codes and deep links)
# Local development:
NEXT_PUBLIC_APP_DOMAIN=localhost:3000
NEXT_PUBLIC_APP_PROTOCOL=http

# Production (replace with your domain):
# NEXT_PUBLIC_APP_DOMAIN=i4iguana.com
# NEXT_PUBLIC_APP_PROTOCOL=https

# Ngrok (for mobile testing):
# NEXT_PUBLIC_APP_DOMAIN=abc123.ngrok.io
# NEXT_PUBLIC_APP_PROTOCOL=https

# ========================================
# Firebase Configuration
# (Your existing Firebase config - don't change!)
# ========================================

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ========================================
# Stripe Configuration (for real payments)
# ========================================

# Stripe Publishable Key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Secret Key (NEVER expose to client!)
STRIPE_SECRET_KEY=sk_test_...

# Stripe Webhook Secret (for payment verification)
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# Product IDs (Stripe Price IDs)
# ========================================

STRIPE_PRICE_MONTHLY=price_monthly_...
STRIPE_PRICE_YEARLY=price_yearly_...
STRIPE_PRICE_LIFETIME=price_lifetime_...
STRIPE_PRICE_ONE_PASS=price_onepass_...
