import * as geohash from 'ngeohash'

export interface Location {
  latitude: number
  longitude: number
  geohash: string
}

/**
 * ‚úÖ FIXED: Calculate distance between two coordinates using Haversine formula
 * üéØ RETURNS DISTANCE IN METERS (not kilometers!)
 * 
 * @param lat1 - First location latitude
 * @param lon1 - First location longitude  
 * @param lat2 - Second location latitude
 * @param lon2 - Second location longitude
 * @returns Distance in METERS
 */
export function calculateDistance(
  lat1: number,
  lon1: number,
  lat2: number,
  lon2: number
): number {
  // ‚úÖ FIX: Changed from 6371 (km) to 6371000 (meters)
  const R = 6371000 // Earth's radius in METERS
  
  const dLat = toRad(lat2 - lat1)
  const dLon = toRad(lon2 - lon1)
  
  const a =
    Math.sin(dLat / 2) * Math.sin(dLat / 2) +
    Math.cos(toRad(lat1)) *
      Math.cos(toRad(lat2)) *
      Math.sin(dLon / 2) *
      Math.sin(dLon / 2)
  
  const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a))
  const distance = R * c // Distance in METERS
  
  return Math.round(distance) // Return rounded meters
}

function toRad(degrees: number): number {
  return degrees * (Math.PI / 180)
}

/**
 * Get current location from browser
 */
export async function getCurrentLocation(): Promise<Location> {
  return new Promise((resolve, reject) => {
    if (!navigator.geolocation) {
      reject(new Error('Geolocation is not supported'))
      return
    }

    navigator.geolocation.getCurrentPosition(
      (position) => {
        const { latitude, longitude } = position.coords
        const hash = geohash.encode(latitude, longitude, 9)
        
        console.log(`üìç Current location: ${latitude}, ${longitude}`)
        
        resolve({
          latitude,
          longitude,
          geohash: hash,
        })
      },
      (error) => {
        console.error('‚ùå Error getting location:', error)
        // Fallback to default location (Tel Aviv area)
        const defaultLat = 32.0853
        const defaultLon = 34.7818
        console.log('‚ö†Ô∏è Using default location')
        resolve({
          latitude: defaultLat,
          longitude: defaultLon,
          geohash: geohash.encode(defaultLat, defaultLon, 9),
        })
      },
      {
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 300000, // 5 minutes
      }
    )
  })
}

/**
 * Get neighboring geohashes for proximity search
 */
export function getGeohashNeighbors(hash: string): string[] {
  const neighbors: string[] = [hash]
  
  try {
    const n = geohash.neighbor(hash, [0, 1]) // North
    const s = geohash.neighbor(hash, [0, -1]) // South
    const e = geohash.neighbor(hash, [1, 0]) // East
    const w = geohash.neighbor(hash, [-1, 0]) // West
    const ne = geohash.neighbor(hash, [1, 1]) // Northeast
    const nw = geohash.neighbor(hash, [-1, 1]) // Northwest
    const se = geohash.neighbor(hash, [1, -1]) // Southeast
    const sw = geohash.neighbor(hash, [-1, -1]) // Southwest

    neighbors.push(n, s, e, w, ne, nw, se, sw)
  } catch (error) {
    console.error('‚ùå Error getting geohash neighbors:', error)
  }

  return neighbors
}

/**
 * ‚úÖ Format distance for display
 * @param distanceInMeters - Distance in meters
 * @returns Formatted string (e.g., "150m" or "1.2km")
 */
export function formatDistance(distanceInMeters: number): string {
  if (!distanceInMeters || distanceInMeters === 0) return '0m'
  
  // Less than 1000m - show in meters
  if (distanceInMeters < 1000) {
    return `${Math.round(distanceInMeters)}m`
  }
  
  // 1000m or more - show in km
  return `${(distanceInMeters / 1000).toFixed(1)}km`
}
